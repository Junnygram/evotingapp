// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
id String @id @default(auto()) @map("_id") @db.ObjectId
name String 
matric String
email String @unique
password String

}


model Candidate {
 id          String @id @default(auto()) @map("_id") @db.ObjectId
 position    String?
 name        String?
 password    String?
 createdAt   DateTime @default(now())
 updatedAt   DateTime @updatedAt
}

model Post {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String?
  comment  String?  
}

enum Role {
  USER
  ADMIN
}